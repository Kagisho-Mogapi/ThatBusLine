@model ThatBusLine.Models.Announcement

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Announcement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group mt-2">
                <label asp-for="Title" class="control-label" ></label>
                <input asp-for="Title" class="form-control" spellcheck="true"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Message" class="control-label"></label>
                <textarea asp-for="Message" class="form-control" style="height:100px;" spellcheck="true"></textarea>
                @*<input asp-for="Message" class="form-control" />*@
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="MessageTarget" class="control-label"></label>
                <input asp-for="MessageTarget" class="form-control" spellcheck="true"/>
                <span asp-validation-for="MessageTarget" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-2">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
